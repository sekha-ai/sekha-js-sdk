{
  "name": "@sekha/sdk",
  "version": "0.1.0",
  "description": "JavaScript/TypeScript SDK for Sekha AI Memory Controller",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "scripts": {
    "build": "tsc && tsc -p tsconfig.cjs.json",
    "build:watch": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:integration": "vitest run tests/integration",
    "lint": "echo 'Linting skipped - add ESLint config if needed' && exit 0",
    "typecheck": "tsc --noEmit",
    "format": "echo 'Formatting skipped - add Prettier if needed' && exit 0",
    "format:check": "echo 'Format check skipped - add Prettier if needed' && exit 0",
    "docs": "echo 'Docs generation skipped - add TypeDoc if needed' && exit 0",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "ai",
    "memory",
    "sekha",
    "typescript"
  ],
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/sekha-ai/sekha-js-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/sekha-ai/sekha-js-sdk/issues"
  },
  "homepage": "https://github.com/sekha-ai/sekha-js-sdk#readme",
  "devDependencies": {
    "@types/node": "^25.0.10",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.16",
    "happy-dom": "^20.3.9",
    "typescript": "^5.9.0",
    "vitest": "^4.0.18"
  }
}
