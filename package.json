{
  "name": "@sekha/sdk",
  "version": "0.1.0",
  "description": "JavaScript/TypeScript SDK for Sekha AI Memory Controller",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "scripts": {
    "build": "tsc && tsc -p tsconfig.cjs.json",
    "build:watch": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:integration": "vitest run tests/integration",
    "lint": "eslint 'src/**/*.{ts,tsx}' 'tests/**/*.{ts,tsx}' --max-warnings 0",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' 'tests/**/*.{ts,tsx}' --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write 'src/**/*.{ts,tsx,json}' 'tests/**/*.{ts,tsx}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx,json}' 'tests/**/*.{ts,tsx}'",
    "docs": "typedoc --entryPoints src/index.ts --out docs",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "ai",
    "memory",
    "sekha",
    "typescript"
  ],
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/sekha-ai/sekha-js-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/sekha-ai/sekha-js-sdk/issues"
  },
  "homepage": "https://github.com/sekha-ai/sekha-js-sdk#readme",
  "devDependencies": {
    "@types/node": "^25.0.10",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.16",
    "eslint": "^9.18.0",
    "happy-dom": "^20.3.9",
    "prettier": "^3.4.2",
    "typedoc": "^0.27.9",
    "typescript": "~5.8.0",
    "vitest": "^4.0.18"
  }
}
